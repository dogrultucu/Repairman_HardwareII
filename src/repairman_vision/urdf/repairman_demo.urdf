<?xml version="1.0"?>
<robot name="repairman_demo">
  <link name="repairman_map"/>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.40 0.30 0.10"/>
      </geometry>
      <material name="base_blue">
        <color rgba="0.10 0.30 0.80 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="repairman_map_to_base" type="fixed">
    <parent link="repairman_map"/>
    <child link="base_link"/>
    <origin xyz="0.50 0.50 0.00" rpy="0 0 0"/>
  </joint>

  <link name="mast_link">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.50"/>
      </geometry>
      <material name="mast_gray">
        <color rgba="0.70 0.70 0.70 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_mast" type="fixed">
    <parent link="base_link"/>
    <child link="mast_link"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
  </joint>

  <link name="tool_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="tool_green">
        <color rgba="0.20 0.85 0.30 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="mast_to_tool" type="fixed">
    <parent link="mast_link"/>
    <child link="tool_link"/>
    <origin xyz="0 0 0.50" rpy="0 0 0"/>
  </joint>
</robot>
